{
  "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noLabelWithoutControl": "off"
      }
    }
  },
  "files": {
    "includes": [
      "src/**",
      "vite.config.ts",
      "package.json",
      "tsconfig.json",
      "tsconfig.node.json",
      "!node_modules",
      "!dist",
      "!src-tauri"
    ]
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  }
}
